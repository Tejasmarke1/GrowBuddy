<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/backTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_150sdp"
            android:text="Terms of Use"
            android:layout_marginTop="@dimen/_18sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            tools:ignore="DuplicateIds" />
        <TextView
            android:id="@+id/help1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"

            android:layout_marginLeft="@dimen/_350sdp"
            android:text="Help"
            android:layout_marginTop="@dimen/_18sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help1"


            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Hello, ðŸ˜Š"
            android:layout_marginTop="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hello"
            android:text="Before you create an account ,please read and
accept terms and conditions"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/before"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/leaves_of_a_plant"
            android:layout_marginLeft="@dimen/_15sdp"

            />
        <TextView
            android:id="@+id/terms"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/before"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Terms and Condition"
            android:layout_marginLeft="@dimen/_100sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            />
        <TextView
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/terms"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Last Updated:Yesterday"
            android:layout_marginLeft="@dimen/_100sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/descriptiont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_term"
            android:layout_marginLeft="@dimen/_20sdp"

            android:textSize="@dimen/_14sdp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/descriptiont"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/black"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"

            />







    </RelativeLayout>

</ScrollView>