<LinearLayout android:id="@+id/rl_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/lightgreen"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sh_buy_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/sh_buy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/sh_buy_image"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="Philode"
                android:textSize="25dp"
                android:textStyle="bold" />


            <!--            <Button-->
            <!--                android:id="@+id/delete_buy_cart"-->
            <!--                android:layout_width="@dimen/_80sdp"-->
            <!--                android:layout_height="80dp"-->
            <!--                android:layout_alignParentStart="true"-->
            <!--                android:layout_marginStart="285dp"-->
            <!--                android:layout_marginLeft="330dp"-->

            <!--                android:layout_marginBottom="124dp"-->
            <!--                android:layout_toRightOf="@+id/sh_buy_name"-->
            <!--                android:text="delete"-->
            <!--                android:visibility="visible" />-->



            <TextView
                android:id="@+id/rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:layout_toRightOf="@id/sh_buy_image"
                android:layout_below="@id/sh_buy_name"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/sh_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:layout_below="@id/sh_buy_name"
                android:layout_toRightOf="@id/rs"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good product with best quality"
                android:textSize="10dp"
                android:layout_below="@id/sh_buy_price"
                android:layout_toRightOf="@id/sh_buy_image"
                android:layout_marginLeft="12dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>