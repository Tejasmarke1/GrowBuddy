<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/backTheme">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_hello"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animation3"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/bg_img"
        android:padding="40dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/lightgreen"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                />
            <View
                android:id="@+id/line"
                android:layout_width="1560dp"
                android:layout_height="2dp"
                android:layout_below="@+id/contact_us"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/phone_call"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/line"
                android:layout_marginLeft="19dp"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:textStyle="bold"
                android:textSize="19dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/line"
                android:layout_marginLeft="70dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 90602345XX"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:layout_below="@+id/phone"
                android:layout_marginTop="7dp"

                android:layout_marginLeft="66dp"/>
            <View
                android:id="@+id/line1"
                android:layout_width="140dp"
                android:layout_height="2dp"
                android:textColor="@color/green"
                android:layout_below="@+id/phone"
                android:layout_marginTop="33dp"
                android:background="@color/green"
                android:layout_marginLeft="66dp"
                />




            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="19dp"
                />

            <TextView
                android:id="@+id/line23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="19dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="70dp"/>



            <TextView
                android:id="@+id/mail"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capstone@gmail.com"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:layout_below="@+id/line23"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="69dp"/>








            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/question_mark"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/line22"
                android:layout_marginLeft="19dp"
                />
            <TextView
                android:id="@+id/line12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask Your Query"
                android:textStyle="bold"
                android:textSize="19dp"

                android:layout_marginTop="10dp"
                android:layout_below="@+id/line22"
                android:layout_marginLeft="70dp"/>



            <EditText
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Send Your Message"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/green"
                android:layout_below="@+id/line12"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="66dp"/>


            <View
                android:id="@+id/line22"
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:layout_below="@+id/line23"
                android:layout_marginTop="33dp"
                android:background="@color/green"
                android:layout_marginLeft="66dp" />

            <Button
                android:id="@+id/send"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Send"
                android:textSize="12sp"
                android:layout_below="@id/question"
                android:layout_marginLeft="67dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/question"
                android:src="@drawable/instagram"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/question"
                android:src="@drawable/facebook"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/question"
                android:src="@drawable/twitter"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/question"
                android:src="@drawable/share"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"/>

        </RelativeLayout>











    </androidx.cardview.widget.CardView>







</LinearLayout>